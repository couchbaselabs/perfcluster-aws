{
    "Description": "An Ec2-classic stack with Couchbase Server, Sync Gateway + load testing tools ",
    "Parameters": {
        "KeyName": {
            "Description": "Name of an existing EC2 KeyPair to enable SSH access",
            "Type": "String"
        }
    },
    "Resources": {
        "CouchbaseSecurityGroup": {
            "Properties": {
                "GroupDescription": "Allow access to Couchbase Server",
                "SecurityGroupIngress": [
                    {
                        "CidrIp": "0.0.0.0/0",
                        "FromPort": "22",
                        "IpProtocol": "tcp",
                        "ToPort": "22"
                    }
                ]
            },
            "Type": "AWS::EC2::SecurityGroup"
        },
        "CouchbaseSecurityGroupIngress1": {
            "Properties": {
		"GroupName" : { "Ref" : "CouchbaseSecurityGroup" },
                "FromPort": "4369",
                "IpProtocol": "tcp",
                "ToPort": "4369",
		"SourceSecurityGroupName" : { "Ref" : "CouchbaseSecurityGroup" }
            },
            "Type": "AWS::EC2::SecurityGroupIngress"
        },
        "couchbaseserver0": {
            "Properties": {
                "ImageId": "ami-403b4328",
                "InstanceType": "m1.large",
                "KeyName": {
                    "Ref": "KeyName"
                },
                "SecurityGroups": [
                    {
                        "Ref": "CouchbaseSecurityGroup"
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "couchbaseserver0"
                    }
                ]
            },
            "Type": "AWS::EC2::Instance"
        },
        "couchbaseserver1": {
            "Properties": {
                "ImageId": "ami-403b4328",
                "InstanceType": "m1.large",
                "KeyName": {
                    "Ref": "KeyName"
                },
                "SecurityGroups": [
                    {
                        "Ref": "CouchbaseSecurityGroup"
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "couchbaseserver1"
                    }
                ]
            },
            "Type": "AWS::EC2::Instance"
        },
        "couchbaseserver2": {
            "Properties": {
                "ImageId": "ami-403b4328",
                "InstanceType": "m1.large",
                "KeyName": {
                    "Ref": "KeyName"
                },
                "SecurityGroups": [
                    {
                        "Ref": "CouchbaseSecurityGroup"
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "couchbaseserver2"
                    }
                ]
            },
            "Type": "AWS::EC2::Instance"
        }
    }
}
