{
    "Description": "Toplevel Stack",
    "Parameters": {
        "KeyName": {
            "Description": "Name of an existing EC2 KeyPair to enable SSH access",
            "Type": "String"
        }
    },
    "Resources": {
        "couchbaseStack": {
            "Properties": {
                "Parameters": {
                    "KeyNameParameter": {
                        "Ref": "KeyName"
                    },
                    "SecurityGroupIdParameter": {
                        "Fn::GetAtt": [
                            "vpcStack",
                            "Outputs.SecurityGroupId"
                        ]
                    },
                    "SubnetIdParameter": {
                        "Fn::GetAtt": [
                            "vpcStack",
                            "Outputs.SubnetId"
                        ]
                    }
                },
                "TemplateURL": "https://s3-eu-west-1.amazonaws.com/scalability-owend/scalability_couchbase.json",
                "TimeoutInMinutes": 60
            },
            "Type": "AWS::CloudFormation::Stack"
        },
        "vpcStack": {
            "Properties": {
                "TemplateURL": "https://s3-eu-west-1.amazonaws.com/scalability-owend/scalability_vpc.json",
                "TimeoutInMinutes": 60
            },
            "Type": "AWS::CloudFormation::Stack"
        }
    }
}
